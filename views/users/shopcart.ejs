<script>
    
function increaseQuantity(element, i,total1,cartId) {
    const quantityElement = element.parentElement.querySelector('.qty-val');
    const currentQuantity = parseInt(quantityElement.innerText, 10);
    const newQuantity = currentQuantity + 1;
    quantityElement.innerText = newQuantity;
   
    const priceElement    = document.getElementById(`price-${i}`)
    const price           = parseInt(priceElement.innerText, 10);
    const subtotalElement = document.getElementById(`subtotal-${i}`);
    subtotalElement.innerText = price*newQuantity 
    const totalAmount = parseInt(document.getElementById('total').innerText, 10);
    const newTotal = totalAmount + price;
    document.getElementById('total').innerText = newTotal.toFixed();
    document.getElementById('wholeTotal').innerText = newTotal.toFixed();
    updateQuantity(cartId, newQuantity);
}

function decreaseQuantity(element, i, total1,cartId) {
    const quantityElement = element.parentElement.querySelector('.qty-val');
    const currentQuantity = parseInt(quantityElement.innerText, 10);
    const newQuantity = Math.max(currentQuantity - 1, 1);
    quantityElement.innerText = newQuantity;
    
    const priceElement = document.getElementById(`price-${i}`);
    const price = parseInt(priceElement.innerText, 10);
    const subtotalElement = document.getElementById(`subtotal-${i}`);
    subtotalElement.innerText = (price * newQuantity).toFixed(2);

    const totalAmountElement = document.getElementById('total');
    const totalAmount = parseFloat(totalAmountElement.innerText); // Use parseFloat to handle decimals
    const originalPrice = parseFloat(document.getElementById(`price-${i}`).innerText); // Get the original price
    const newTotal = totalAmount - (originalPrice * (currentQuantity - newQuantity)); // Calculate the difference
    totalAmountElement.innerText = newTotal.toFixed();

    document.getElementById('wholeTotal').innerText = newTotal.toFixed();
    updateQuantity(cartId, newQuantity);
}



function updateQuantity(cartId,newQuantity) {
  fetch('/updateQuantity', {
    method: 'PUT',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({
      cartId: cartId,
      newQuantity: newQuantity
    })
  })
  .then(response => {
    if (!response.ok) {
      throw new Error('Network response was not ok.');
    }
    return response.json();
  })
  .then(data => {
    // Handle successful response from the server
    console.log('Quantity updated successfully:', data);
    // Perform UI update if needed
  })
  .catch(error => {
    // Handle error
    console.error('There was a problem updating quantity:', error);
  });
}


</script>
                            
