        //   this.style.display = 'none'; // Hide the button when clicked
        // });
      
        // Start the timer immediately when the page loads
        startTimer();
      </script>
      <script>
        function resendOTP() {
            // Get values from hidden inputs
            var name = document.getElementById('nameInput').value;
            var email = document.getElementById('emailInput').value;
            var phone = document.getElementById('phoneInput').value;
            var password = document.getElementById('passwordInput').value;
        
            // Construct the URL with query parameters
            var url = '/resend-otp?name=' + encodeURIComponent(name) + '&email=' + encodeURIComponent(email) + '&phone=' + encodeURIComponent(phone) + '&password=' + encodeURIComponent(password);
        
            // Set the new URL for the "Resend OTP" link
            document.getElementById('resendButton').href = url;
        }
        </script>
      
    
