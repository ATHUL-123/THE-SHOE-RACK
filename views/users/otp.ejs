    <script>
        let timeLeft = 60;
        let resendButton = document.getElementById('resendButton');
      
        function updateTimer() {
          const countdownElement = document.getElementById('countdown');
          countdownElement.innerHTML = `Resend otp in ${timeLeft} seconds`;
      
          if (timeLeft > 0) {
            timeLeft--;
            setTimeout(updateTimer, 1000);
          } else {
            countdownElement.innerHTML = 'Timeout reached';
            resendButton.style.display = 'inline'; // Show the button
          }
        }
      
        function startTimer() {
          updateTimer();
          resendButton.style.display = 'none'; // Hide the button when timer starts
        }
      
        // Attach an event listener to the "Resend OTP" button
