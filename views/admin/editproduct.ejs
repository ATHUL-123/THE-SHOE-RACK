                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">

                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product Name</label>
                                    <input type="text" required value="<%=product.productName%>" name="productName"
                                        class="form-control" id="product_name">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea name="description" required class="form-control"
                                        rows="4"><%=product.description%></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input id="regularPrice" name="regularPrice" required value="<%=product.regularPrice%>"
                                                    type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Sale price</label>
                                            <input id="salePrice" name="salePrice" value="<%=product.salePrice%>" type="text"
                                                class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label class="form-label">ProductID</label>
                                        <input type="text" name="ProductId" class="form-control" id="product_name">
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full Description & Details</label>
                                    <textarea name="description2" required class="form-control"
                                        rows="4"><%=product.description2%></textarea>
                                </div>

                            </form><script>
                                document.getElementById('salePrice').addEventListener('input', function() {
                                    const regularPrice = parseFloat(document.getElementById('regularPrice').value);
                                    const salePrice = parseFloat(this.value);
                            
                                    if (isNaN(regularPrice) || isNaN(salePrice) || regularPrice <= 0 || salePrice <= 0) {
                                        alert('Both regular price and sale price must be valid positive numbers.');
                                        this.value = '';
                                    } else if (salePrice >= regularPrice) {
                                        alert('Sale price must be less than regular price.');
                                        this.value = '';
                                    }
                                });
                            </script>
                            </div>
