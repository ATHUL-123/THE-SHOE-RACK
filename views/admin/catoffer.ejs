<script>
    document.addEventListener("DOMContentLoaded", function() {
        const addOfferLinks = document.querySelectorAll('.add');
    
        addOfferLinks.forEach((link, index) => {
            link.addEventListener('click', (event) => {
                event.preventDefault();
                
                // Fetch categoryId from the corresponding hidden input in the dropdown menu
                const categoryId = link.getAttribute('data-catid');
                const categoryName = document.querySelectorAll('tbody tr td:nth-child(1)')[index].textContent;
                const categoryDiscount = document.querySelectorAll('tbody tr td:nth-child(2)')[index].textContent;
                const categoryExpiry = document.querySelectorAll('tbody tr td:nth-child(3)')[index].textContent;
                const categoryStatus = document.querySelectorAll('tbody tr td:nth-child(4)')[index].textContent;
    
                // Set the values to the respective form fields
                document.querySelector('input[name="catId"]').value = categoryId;
                document.querySelector('input[name="catname"]').value = categoryName;
                document.querySelector('input[name="discount"]').value = categoryDiscount;
                document.querySelector('input[name="expirydate"]').value = categoryExpiry;
                document.querySelector('.form-select').value = categoryStatus;
            });
        });
    });
