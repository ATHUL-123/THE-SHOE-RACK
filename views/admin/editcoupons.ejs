<script>
function validateForm() {
    var code = document.forms["couponForm"]["code"].value.trim();
    var discount = document.forms["couponForm"]["discount"].value.trim();
    var limit = document.forms["couponForm"]["limit"].value.trim();
    var percentage = document.forms["couponForm"]["percentage"].value.trim();
    var description = document.forms["couponForm"]["description"].value.trim();

    if (!code || !discount || !limit || !percentage || !description) {
        alert("All fields must be filled.");
        return false;
    }

    if (isNaN(discount) || isNaN(percentage)) {
        alert("Discount and Percentage must be numeric values.");
        return false;
    }

    return true;
}

</script>
