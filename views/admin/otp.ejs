        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Enter OTP</h4>
                    <form action="verifyotp" method="post">
                        <div class="mb-3">
                            <input class="form-control" name="OTP" placeholder="OTP" type="text" required>
                        </div>
        
                        <div id="countdown"></div>
                        <a id="resendButton" class="text-muted" href="resendOTP?email=<%=email%>" style="display: none;">Resend OTP</a>
        
                        <div class="mt-5">
                            <button style="margin-top: 10px;" type="submit" class="btn btn-primary w-100">Send OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <script>
            let timeLeft = 60;
        
            function updateTimer() {
                const countdownElement = document.getElementById('countdown');
                countdownElement.innerHTML = ` ${timeLeft} seconds left`;
        
                if (timeLeft > 0) {
                    timeLeft--;
                    setTimeout(updateTimer, 1000);
                } else {
                    
                    const resendButton = document.getElementById('resendButton');
                    resendButton.style.display = 'inline'; // Show the button
                }
            }
        
            function startTimer() {
                const resendButton = document.getElementById('resendButton');
                resendButton.style.display = 'none'; // Hide the button initially
                updateTimer();
            }
        
            startTimer();
        </script>
